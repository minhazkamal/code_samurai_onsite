                                    </div>
                                    <div class="input-box">
                                        <span for="user_type" class="details">User Type</span>

                                        <select name="user_type" id="userType" onchange='toggle()'required>
                                            <option value="" disabled selected>Select a Type</option>
                                            <option value="APP">Application User</option>
                                            <option value="EXEC">Executive Agnecy</option>
                                        </select>
                                    </div>
                                    <div class="input-box forAgency" id="forAgency1" style="display: none;">
                                        <span class="details">Agency Name</span>
                                        <input type="text" name="agencyName" placeholder="Enter your agency name">
                                    </div>
                                    <div class="input-box forAgency" id="forAgency" style="display: none;">
                                        <span class="details">Description</span>
                                        <input type="text" name="description"
                                            placeholder="Enter your agency description">
                                    </div>

                                </div>

                                <div class="button">
                                    <input type="submit" value="Register">
                                </div>
                            </form>
