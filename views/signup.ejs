<script>
    $(document).ready(function () {
        $.ajax({
            type: 'GET',
            data: {},
            url: '/getType',
            success: function (data) {
                // console.log(data);
                var result = [];
                for (var i in data) {
                    result.push([data[i]]);
                    // create option using DOM
                    const newOption = document.createElement('option');
                    const optionText = document.createTextNode(data[i]);
                    // set option text
                    newOption.appendChild(optionText);
                    // and option value
                    newOption.setAttribute('value', data[i]);
                    const select = document.getElementById('userType');
                    select.appendChild(newOption);
                }

                console.log(result);
                // if (data.upazilla !== null) $('#basic_upazilla').val(data.upazilla);
            }
        });
    });
</script>

